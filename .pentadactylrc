js <<EOF

// Wiki Selected Text
wiki_selected_text = function () 
{
	str = buffer.getCurrentWord()
	liberator.execute('wikipedia ' + str);
}
//google c2e selected Text
ch2en = function()
{
	str = buffer.getCurrentWord()
	liberator.execute('translate ' + str);
}
en2ch = function()
{
	str = buffer.getCurrentWord()
	liberator.execute('ctranslate ' + str);
}
//music
music = function()
{
	str = buffer.getCurrentWord()
	//liberator.execute('music ' + str);
	liberator.execute('music ' + str)
}
//verycd
verycd = function()
{
	str = buffer.getCurrentWord()
	liberator.execute('verycd ' + str);
}
//lyric
lyric = function()
{
	str = buffer.getCurrentWord()
	liberator.execute('lyric ' + str);
}
//yinyue
yinyue = function()
{
	str = buffer.getCurrentWord()
	liberator.execute('yinyue ' + str);
}
//taobao
taobao = function()
{
	str = buffer.getCurrentWord()
	liberator.execute('taobao ' + str);
}
//google
google = function()
{
	str = buffer.getCurrentWord();
	liberator.execute('google ' + str);
}
//baidu
baidu = function()
{
	str = buffer.getCurrentWord();
	liberator.execute('baidu '+ str);
}
//plugin
plugin = function()
{
	str = buffer.getCurrentWord();
	liberator.execute('plugin '+ str);
}
EOF

"设置快捷键
map <C-w> :js wiki_selected_text() <CR>
map <A-c> :js en2ch()<CR>
map <A-e> :js ch2en()<CR>
map <A-m> :js music()<CR>
map <A-v> :js verycd()<CR>
map <A-l> :js lyric()<CR>
map <A-y> :js yinyue()<CR>
map <A-t> :js taobao()<CR>
map <A-g> :js google()<CR>
map <A-p> :js plugin()<CR>

"即时生效
map S :so "/root/_pentadactylrc"<CR> 

"编辑器
set editor="vim -f"
